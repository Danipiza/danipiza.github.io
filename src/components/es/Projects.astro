---
import GitHub from "../icons/GitHub.astro"

import NextJs from "../icons/NextJs.astro"
import Python from "../icons/Python.astro"
import PyTorch from "../icons/PyTorch.astro"
import Keras from "../icons/Keras.astro"
import TensorFlow from "../icons/TensorFlow.astro"
import C_sharp from "../icons/C_sharp.astro"

/*import Link from "./icons/Link.astro"*/
import LinkButton from "../LinkButton.astro"

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-custom-next text-white ",
        icon: NextJs,
    },
    PYTHON: {
        name: "Python",
        class: "bg-custom-next text-white ",
        icon: Python,
    },
    PYTORCH: {
        name: "PyTorch",
        class: "bg-custom-next text-white ",
        icon: PyTorch,
    },
    KERAS: {
        name: "Keras",
        class: "bg-custom-next text-white ",
        icon: Keras,
    },
    TENSORFLOW: {
        name: "TensorFlow",
        class: "bg-custom-next text-white ",
        icon: TensorFlow,
    },
    CSHARP: {
        name: "C_sharp",
        class: "bg-custom-next text-white ",
        icon: C_sharp,
    },

}

const PROJECTS = [
    {
        title: 'ReCode-AI',
        description: 'Este repositorio presenta implementaciones de Inteligencia Artificial en varias técnicas; Aprendizaje Automático, Aprendizaje Profundo, Procesamiento del Lenguaje Natural o Visión por Computadora. Las implementaciones se realizan en Python y C#, desde cero y utilizando librerías conocidas como PyTorch, Keras o TensorFlow.',
        link: 'https://github.com/Danipiza/ReCode-AI/',
        github: 'https://github.com/Danipiza/ReCode-AI/',
        image: '/ReCode-AI.jpg',
        tags: [TAGS.PYTHON]//,TAGS.PYTORCH,TAGS.KERAS,TAGS.TENSORFLOW,TAGS.CSHARP]
    },    
    {
        title: 'TFG - MPAI-Boost',
        description: 'Trabajo de Fin de Grado desarrollado en el curso 2023-2024. Consiste en optimizar algoritmos de IA aplicando técnicas enfocadas al cómputo de alto rendimiento (MPI). Calificación final obtenida: 9.5',
        link: 'https://github.com/Danipiza/TFG',
        github: 'https://github.com/Danipiza/TFG',
        image: '/tfg.png',
        tags: [TAGS.PYTHON]
    },
    {
        title: 'Games-AI',
        description: 'Este repositorio presenta implementaciones de Inteligencia Artificial que abordan juegos conocidos utilizando algoritmos de aprendizaje por refuerzo (RL). La IA entrena dentro de cada entorno durante un período de tiempo específico. A lo largo de este proceso de entrenamiento, la IA acumula experiencias que refinan y ajustan los parámetros para lograr con éxito los objetivos establecidos por el entorno del juego.',
        link: 'https://github.com/Danipiza/Games-AI',
        github: 'https://github.com/Danipiza/Games-AI',
        image: '/Games_AI.webp',
        tags: [TAGS.PYTHON]
    },
    {
        title: 'UCM',
        description: 'Repositorio con todas las prácticas y ejercicios desarrollados a lo largo de mi estancia en la Universidad Complutense de Madrid.',
        link: 'https://github.com/Danipiza/UCM',
        github: 'https://github.com/Danipiza/UCM',
        image: '/ucm.webp',
    },
]
---

<style>
    .bg-custom-next {
        background-color: rgba(46, 41, 43, 0.8);
    }
</style>

{PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article>
        <h3 class="text-2xl font-semibold text-yellow-100 mb-2">{title}</h3>
        <p class="text-lg mb-3 text-pretty">{description}</p>
        {tags && tags.length > 0 && (
            <ul class="flex mb-3 gap-x-3 flex-row">
                {tags.map((tag) => (
                    <li>
                        {typeof tag === 'string' ? (
                            <span class="flex items-center justify-center gap-x-2 rounded-full text-sm py-1 px-2">{tag}</span>
                        ) : (
                            <span class={`flex items-center justify-center gap-x-2 rounded-full text-xl ${tag.class} py-1 px-2`}>
                                <tag.icon class="size-8" />
                                {tag.name}
                            </span>
                        )}
                    </li>
                ))}
            </ul>
        )}
        <img
            class="rounded shadow-2xl shadow-white/20"
            src={image}
            alt={`Screenshot of the project ${title}`} />
        <footer class="flex items-end justify-start mb-7 mt-4 gap-x-4">
            {github && (
                <LinkButton href={github}>
                    <GitHub class="size-6" />
                    Repositorio
                </LinkButton>
            )}
        </footer>
    </article>
))}



